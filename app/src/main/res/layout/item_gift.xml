<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Üst Satır: Ürün Adı + Beğeni ve Beğenmeme Butonları -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Product Name"
                android:textColor="@color/text_color"
                android:fontFamily="@font/poppins_bold"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Beğeni ve Beğenmeme Butonları -->
            <ImageView
                android:id="@+id/iv_like"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_thumb_up"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/iv_dislike"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_thumb_down"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <!-- Amazon Link Row -->
        <LinearLayout
            android:id="@+id/ll_amazon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/iv_amazon_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_amazon" />

            <TextView
                android:id="@+id/tv_amazon_link"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="Amazon'dan al"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/text_color"
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/iv_amazon_arrow"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@drawable/ic_arrow" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginVertical="4dp" />

        <!-- Hepsiburada Link Row -->
        <LinearLayout
            android:id="@+id/ll_hepsiburada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/iv_hepsiburada_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_hepsiburada" />

            <TextView
                android:id="@+id/tv_hepsiburada_link"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="Hepsiburada'dan al"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/text_color"
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/iv_hepsiburada_arrow"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@drawable/ic_arrow" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginVertical="4dp" />

        <!-- Trendyol Link Row -->
        <LinearLayout
            android:id="@+id/ll_trendyol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/iv_trendyol_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_trendyol" />

            <TextView
                android:id="@+id/tv_trendyol_link"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="Trendyol'dan al"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/text_color"
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/iv_trendyol_arrow"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@drawable/ic_arrow" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
