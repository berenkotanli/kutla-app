<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_bottom_sheet"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ivFriendProfile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar_man"
        android:background="@drawable/circle_background"/>

    <TextView
        android:id="@+id/tvFriendName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:paddingTop="8dp"
        tools:text="Ad Soyad" />

    <TextView
        android:id="@+id/tvPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:textSize="16sp"
        tools:text="Cep telefonu: 555 55 55" />

    <TextView
        android:id="@+id/tvFriendBirthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:textSize="16sp"
        tools:text="Doğum günü: 25 Mart" />

    <TextView
        android:id="@+id/tvZodiacSign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:textSize="16sp"
        tools:text="Burcu: Koç" />

    <TextView
        android:id="@+id/tvFriendJob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"
        android:gravity="center"
        android:paddingTop="4dp"
        tools:text="Meslek: Yazılım Geliştirici" />

    <TextView
        android:id="@+id/tvFriendHobbies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:textSize="16sp"
        android:gravity="center"
        android:paddingTop="4dp"
        tools:text="Hobiler: Müzik, Spor" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kapat"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="12dp"
        android:backgroundTint="@color/purple_500"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:textSize="16sp"
        android:textAllCaps="false" />
</LinearLayout>
